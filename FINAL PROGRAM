    int choice;
    if (scanf("%d", &choice) != 1) {
        printf("Invalid input\n");
        return 1;
    }
    
    if (choice == 1) {
        add_employees(employees, &employee_count);
        save_to_csv(employees, employee_count);
    }

    printf("\nDo you want to sort employees by ID? (1=Yes, 0=No): ");
